source 'http://rubygems.org'

gem 'rails', '3.2.3'
gem 'pg'
gem 'sqlite3', :group => :development

gem 'asset_sync'

gem 'jquery-rails'
gem 'devise'

gem 'carrierwave'
gem 'fog'
gem 'rmagick'

gem 'rbrainz'

# Gems used only for assets and not required in production environments by default.
group :assets do
  gem 'sass-rails', '~> 3.1'
  gem 'bourbon'
  gem 'bootstrap-sass', "~> 2.0.2"  
  gem 'uglifier', '>= 1.0.3'
end

gem 'thin'

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

group :test do
  gem 'database_cleaner'
  gem 'cucumber-rails'
  gem 'capybara'
end

