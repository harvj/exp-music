<!DOCTYPE html>
<html>
<head>
  <title>Muz | <%= params[:action].titleize %> <%= params[:controller].titleize %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="page" class="<%= params[:controller] %>-<%= params[:action] %>">

  <div id="header">
    <div id="account-nav">
      <% if user_signed_in? %>
        Signed in as <%= current_user.username %> | 
        <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
      <% elsif controller_name == 'sessions' %>
        No account? <%= link_to "Register", new_user_registration_path %>
      <% else %>
        <%= link_to "Login", new_user_session_path %>
      <% end %>
    </div>
    <div id="logo"><%= link_to 'home', root_path %></div>
    <div id="site-nav">
      <ul class="navigation">
        <li><%= link_to "Releases", releases_path %></li>
      </ul>
    </div>
  </div>

  <div id="content">
    <%= yield %>
  </div>

  <div id="footer"></div>

</div>
</body>
</html>
