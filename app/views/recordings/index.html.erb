<% @recordings.each do |recording| %>
  <tr>
    <td><%= recording.name %></td>
    <td><%= recording.length %></td>
    <td><%= link_to 'Show', recording %></td>
    <td><%= link_to 'Edit', edit_recording_path(recording) %></td>
    <td><%= link_to 'Destroy', recording, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

